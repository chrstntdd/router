{
  "extends": ["tslint-config-airbnb", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "jsx-no-lambda": false,
    "no-increment-decrement": false,
    "no-parameter-reassignment": false,
    "prefer-template": false,
    "no-console": true,
    "function-name": [
      true,
      {
        "function-regex": "^[a-zA-Z][\\w\\d]+$"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  },
  "linterOptions": {
    "exclude": ["dist/*"]
  }
}
